[flake8]
exclude =
    .git,
    .github,
    .idea,
    .vscode,
    __pycache__,
    configs,
    cv_templates,
    data,
    docs,
    locale,
    media,
    migrations,
    node_modules,
    static_build,
    static_src,
    templates,
    venv
max_doc_length = 80
max_line_length = 119
statistics = True
format = pylint
